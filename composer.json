{
    "name": "vysokeskoly/cache-bundle",
    "type": "symfony-bundle",
    "description": "Provides memcached services with proper usage of connection pool",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-memcached": "*",
        "symfony/config": "^5.0 || ^6.0",
        "symfony/dependency-injection": "^5.0 || ^6.0",
        "symfony/http-kernel": "^5.0 || ^6.0"
    },
    "require-dev": {
        "lmc/coding-standard": "^3.3",
        "php-mock/php-mock-phpunit": "^2.0",
        "symfony/yaml": "^5.0 || ^6.0",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.7",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-phpunit": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "VysokeSkoly\\CacheBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VysokeSkoly\\CacheBundle\\": "tests/"
        }
    },
    "scripts": {
        "all": [
            "@analyze",
            "@tests"
        ],
        "analyze": [
            "@cs",
            "@phpstan"
        ],
        "cs": "vendor/bin/ecs check --ansi -- src/ tests/ ecs.php",
        "phpstan": "vendor/bin/phpstan analyze ./src ./tests -c phpstan.neon --ansi --level 8",
        "tests": "vendor/bin/phpunit",
        "fix": "vendor/bin/ecs check --ansi --clear-cache --fix -- src/ tests/ ecs.php"
    },
    "config": {
        "secure-http": false,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    }
}
